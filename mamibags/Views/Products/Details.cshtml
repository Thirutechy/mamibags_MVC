@model mamibags.Models.tbl_Products

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .flex-center {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }
</style>

<div class="flex-center ">
    <div class="card mt-3" style="width: 35rem;">
        <div class="card-header">
            <h2>Product Details</h2>  <!-- Card header for product details -->
        </div>       
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }
        @if (Model != null)
        {
            <div class="card-body">
                <dl class="card-text">
                    <dt>
                        @Html.DisplayNameFor(model => model.ProductID)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ProductID)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Pname)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Pname)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Size)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Size)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Price)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ImagePath)
                    </dt>

                    <dd>
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="~/Content/Image/@Model.ImagePath" alt="@Model.Pname" width="100" height="100" /> // Correct reference
                        }
                        else
                        {
                            <p>No image available.</p>// Handle missing images
                        }
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <!-- Card footer for action buttons -->
                @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID }, new { @class = "btn btn-warning" }) 
                @Html.ActionLink("Delete", "Delete", new { id = Model.ProductID }, new { @class = "btn btn-danger" })  
                @Html.ActionLink("Back to List", "Admin", new { @class = "btn btn-secondary" })  
            </div>
        }
        else
        {
            <p>Product not found.</p>
        }
    </div>
</div>
