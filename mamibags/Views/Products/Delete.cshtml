@model mamibags.Models.tbl_Products

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .flex-center {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }
</style>
<div class="flex-center mt-3">
    <div class="card" style="width: 35rem;">
        <div class="card-header">
            <h2>Delete</h2>
            <h4>Are you sure you want to delete this?</h4>
        </div>

        <div class="card-body">

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Pname)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Pname)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Size)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Size)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ImagePath)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ImagePath)
                </dd>
                <dd>
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="~/Content/Image/@Model.ImagePath" alt="@Model.Pname" width="70" height="50" /> // Correct reference
                    }
                    else
                    {
                        <p>No image available.</p>// Handle missing images
                    }
                </dd>

            </dl>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color card-footer">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to List", "Admin")
            </div>
        }

    </div>
</div>


